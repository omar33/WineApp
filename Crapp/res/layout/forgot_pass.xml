<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#00b1f5">
 
    
    
      <EditText 
         android:id="@+id/forgot_username"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dip"
         android:gravity="center"
         android:singleLine="true"
         android:layout_marginBottom="20dip"
         android:background="@drawable/round"
         android:textColor="#000000"
         android:hint="Username"/>
    
    <TextView 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:textColor="#372c24"
         android:gravity="center"
         android:text="Select A Security Question"/>
    
    
    
    <Spinner
        		android:id="@+id/forgot_spinner"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:entries="@array/secretquestion_arrays"
        		android:layout_marginBottom="20dip"
        		android:textColor= "#000000"
        		android:background = "@drawable/round"/>
 
   

  <EditText 
         android:id="@+id/forgot_security_answer"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dip"
         android:singleLine="true"
         android:layout_marginBottom="20dip"
         android:background="@drawable/round"
         android:textColor="#000000"
         android:gravity="center"
         android:hint="Security Question Answer"/>
 
    <Button
        android:id="@+id/retrieve_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve Password" />
 
</LinearLayout>