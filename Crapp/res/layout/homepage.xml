<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
    android:orientation="vertical" 
    android:background="@drawable/christmaswine"
    
	>
	
    
    
    
    
    
     <ImageButton
        android:id="@+id/lofoff"
        android:layout_width="75px"
        android:layout_height="30px"
        android:contentDescription="@string/desc"
        android:layout_gravity="right"
        android:background="@drawable/woodhome" 
        android:layout_marginRight="5px"
        android:layout_marginTop="4px"
 
        />

     
        <ImageButton
        	    android:id="@+id/friendsbt"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginBottom="20dip"
        		android:layout_marginTop="20dip"
        		android:textSize="20sp"
        		android:gravity="top|right"
         		android:text="Friends" 
         		android:textColor="#FFFFFF"
         		android:clickable="true"/>
      
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    
    
    
    
    
    
    


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/wineCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:layout_gravity="left"
        android:background="@drawable/winebuzz"
        android:layout_marginRight="10px"
       
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/wineInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:layout_gravity="left"
        android:background="@drawable/inventory" 
        android:layout_marginRight="10px"
        
        
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/wishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:layout_gravity="left"
        android:background="@drawable/wishlist"
        android:layout_marginRight="10px"
       
         />
   <ImageButton
        android:id="@+id/wineReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:layout_gravity="left"
        android:background="@drawable/winereviews" 
        android:layout_marginRight="10px"
        android:layout_marginTop="30px"

             />

</LinearLayout>